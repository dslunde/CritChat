# RAG System Configuration
# Copy this file to .env.local and fill in your actual API keys

# OpenAI Configuration (Required for AI responses)
OPENAI_API_KEY=your_openai_api_key_here

# Weaviate Configuration
# Option 1: Local Weaviate (recommended for testing)
WEAVIATE_URL=http://localhost:8080
# WEAVIATE_API_KEY=  # Not needed for local setup

# Option 2: Weaviate Cloud (if you have a cloud instance)
# WEAVIATE_URL=https://your-cluster.weaviate.network
# WEAVIATE_API_KEY=your_weaviate_api_key_here

# Enable production AI services (set to true to use real AI instead of mocks)
USE_PRODUCTION_AI=true 